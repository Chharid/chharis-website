      <button type="submit">Logout</button>
    </form>
  </div>

  <script>
    fetch('/session-user')
      .then(res => res.json())
      .then(data => {
        if(data.username) {
          document.getElementById('username').textContent = data.username;
        } else {
          window.location.href = '/login.html';
        }
      });
  </script>
